<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kaciras.blog.api.discuss.DiscussionDAO">

	<select id="selectByIds" resultType="com.kaciras.blog.api.discuss.Discussion">
		SELECT * FROM discussion WHERE id IN
		<foreach collection="ids" item='item' open='(' separator=',' close=')'>
			#{item}
		</foreach>
	</select>
</mapper>
