<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.kaciras.blog.api.article.ArticleDAO">

	<resultMap type="net.kaciras.blog.api.article.ArticleLink" id="ArticleLinkMap">
		<constructor>
			<arg column="id" javaType="_int"/>
			<arg column="url_title" javaType="String"/>
			<arg column="title" javaType="String"/>
		</constructor>
	</resultMap>

	<resultMap type="net.kaciras.blog.api.article.Article" id="ArticleMap">
		<id property="id" column="id"/>
		<result property="urlTitle" column="url_title"/>
		<result property="viewCount" column="view_count"/>
		<result property="create" column="create_time"/>
		<result property="update" column="update_time"/>
		<collection property="keywords" column="id" select="net.kaciras.blog.api.article.KeywordDAO.select"/>
	</resultMap>
</mapper>
